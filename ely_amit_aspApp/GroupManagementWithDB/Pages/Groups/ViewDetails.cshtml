@page
@model GroupManagementWithDB.Pages.Groups.ViewDetailsModel
@{
}

<br />
<h2>List of users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Group ID</th>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.listUsersInGroup)
        {
            <tr>
                <td>@item.group_id</td>
                <td>@item.id</td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.email</td>
                <td>
                    <a class="btn btn-outline-danger btn-dark" href="Disconnect?id=@item.id,@item.group_id">disconnect</a>
                </td>
            </tr>
        }
    </tbody>
  </table>
